<Window x:Class="Discord_Bot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="450*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="440*"/>
            <ColumnDefinition Width="360*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer x:Name="MainLog" Background="Black" CanContentScroll="True" Grid.Column="0" ScrollChanged="ScrollViewer_ScrollChanged" Margin="0,0,0,0">
            <TextBlock x:Name="MainLogText" TextWrapping="Wrap" Foreground="White"/>
        </ScrollViewer>
        <ToolBar x:Name="MainToolBar" ToolBarTray.IsLocked="True" Grid.Column="1" Grid.Row="0" Loaded="ToolBar_Loaded" Height="20" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Button" Click="WriteLog" HorizontalAlignment="Right" Width="40" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
